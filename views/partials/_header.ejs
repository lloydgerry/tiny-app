<!-- views/partials/header.ejs -->


<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-success">
      <a class="navbar-brand" href="/urls">Lloyd's TinyApp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
          
        </div>
        <div class ="buttons ml-auto p-2 bd-highlight">
            <% if (!user) { %>
            <form class="form-inline" method="POST" action="/login">
            <label for "userId"></label>
            <input class="form-control" type="text" name="userId" placeholder="myusername" margin: "1em" margin-left:500px>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
          <% } %> 
        </div>
        <% if (user) { %>
        <div class="navbar ml-auto p-2 bd-highlight">
          <div class="navbar nav-item">
          Logged in as: <%= user.email %>
        </div>
          <form method="POST" action="/logout">
          <button  type="submit" class="btn btn-info">Logout</button>
        </form>
        <% } %>
        </div> 
      </div>
    </nav>
  </header>